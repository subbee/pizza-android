<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/header_image"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:contentDescription="Pizza app header image"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/header" />

    <!-- Gombok a kijelentkezett állapothoz -->
    <Button
        android:id="@+id/pizzas_button"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Pizzák"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_image" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bejelentkezés"
        app:layout_constraintEnd_toStartOf="@id/register_button"
        app:layout_constraintHorizontal_bias="0.296"
        app:layout_constraintStart_toEndOf="@id/pizzas_button"
        app:layout_constraintTop_toTopOf="@+id/pizzas_button" />

    <Button
        android:id="@+id/register_button"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Regisztráció"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pizzas_button" />

    <!-- Elemek a bejelentkezett állapothoz (kezdetben rejtve) -->


    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="138dp"
        android:layout_height="25dp"
        android:layout_marginEnd="8dp"
        android:textStyle="bold"
        android:gravity="end"
        app:layout_constraintBottom_toBottomOf="@+id/pizzas_button"
        app:layout_constraintEnd_toStartOf="@+id/logout_button"
        app:layout_constraintTop_toTopOf="@+id/pizzas_button"
        app:layout_constraintVertical_bias="0.636"
        tools:text="Hello User!" />

    <Button
        android:id="@+id/logout_button"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Kijelentkezés"
        app:layout_constraintEnd_toEndOf="@id/register_button"
        app:layout_constraintTop_toTopOf="@+id/pizzas_button" />

    <androidx.fragment.app.FragmentContainerView
     android:id="@+id/fragment_container"
     android:layout_width="0dp"
     android:layout_height="0dp"
     android:layout_marginTop="8dp"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/pizzas_button" />

</androidx.constraintlayout.widget.ConstraintLayout>